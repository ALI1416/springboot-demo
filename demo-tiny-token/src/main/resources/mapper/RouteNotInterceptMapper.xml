<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.mapper.RouteNotInterceptMapper">

  <sql id="col">
    id,path,name,seq
  </sql>

  <insert id="insert" parameterType="RouteNotInterceptVo">
    INSERT route_not_intercept (
    <include refid="col"/>
    )
    VALUES
    (
    #{id},#{path},#{name},#{seq}
    )
  </insert>

  <delete id="delete" parameterType="Long">
    DELETE
    FROM
    route_not_intercept
    WHERE
    id = #{id}
  </delete>

  <update id="update" parameterType="RouteNotInterceptVo">
    UPDATE route_not_intercept
    <set>
      <if test="path != null">
        path = #{path},
      </if>
      <if test="name != null">
        name = #{name},
      </if>
      <if test="seq != null">
        seq = #{seq},
      </if>
    </set>
    WHERE
    id = #{id}
  </update>

  <select id="findAll" resultType="RouteNotInterceptVo">
    SELECT
    id,
    path,
    name,
    seq
    FROM
    route_not_intercept
    ORDER BY
    seq
  </select>

</mapper>